<h1>Listing friendships</h1>

<table>
  <tr>
    <th>Proposer</th>
    <th>Proposee</th>
    <th>Proposer sharing pref</th>
    <th>Proposee sharing pref</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @friendships.each do |friendship| %>
  <tr>
    <td><%= friendship.proposer %></td>
    <td><%= friendship.proposee %></td>
    <td><%= friendship.proposer_sharing_pref %></td>
    <td><%= friendship.proposee_sharing_pref %></td>
    <td><%= link_to 'Show', friendship %></td>
    <td><%= link_to 'Edit', edit_friendship_path(friendship) %></td>
    <td><%= link_to 'Destroy', friendship, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

